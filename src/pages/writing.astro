---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'Writing';
const description = 'Writing';
const permalink = `${Astro.site.href}writing`;
---

<BaseLayout title={title} description={description} permalink={permalink} current="writing">
  <div class="container">
    <iframe src="https://maudecodes.substack.com/embed" width="480" height="320" style="border:1px solid #EEE; background:white;" frameborder="0" scrolling="no"></iframe>
  </div>
</BaseLayout>

<style>
  .about-image {
    float: right;
    margin: -3em -7em 2em 2em;
    max-width: 300px;
  }

  .about-image img {
    border-radius: 8px;
    margin-bottom: 1.5em;
  }

  @media (max-width: 1020px) {
    .about-image {
      float: none;
      margin: 0 auto 2em;
    }
  }
</style>
