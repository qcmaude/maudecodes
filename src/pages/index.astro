---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'Home';
const description = 'Home';
const permalink = `${Astro.site.href}home`;
---

<BaseLayout title={title} description={description} permalink={permalink} current="">
  <div class="container">
    <h1>Maude Lemaire</h1>
    <p>
      📣 I'm mentoring! Find out more <a href="/mentorship">here</a>.
    </p>
    <p>
      👩🏻‍💻 Principal Engineer at <a href="https://github.com/">GitHub</a>
      <br/>
      👩🏻‍💻 Former Senior Staff Engineer at <a href="https://slack.com/">Slack</a>
      <br/>
      🧠 <a href="https://leaddev.com/">LeadDev</a> <a href="https://leaddev.com/advisory-board">advisory board member</a> & <a href="https://leaddev.com/community/maude-lemaire">contributor</a>
      <br/>
      📘 <a href="https://www.oreilly.com/library/view/refactoring-at-scale/9781492075523/">O'Reilly author</a>
      <br/>
      📣 Occasional <a href="/speaking">conference speaker</a>
      <br/>
      👨‍👩‍👦 Maman, wife, 👩🏻‍🍳 avid cook (when time allows)
    </p>
    <p>
      <img class="social" src="assets/linkedin.png"/>I'm also on <a href="https://www.linkedin.com/in/lemairemaude/">LinkedIn</a>
    </p>
  </div>
</BaseLayout>

<style>
  .social {
    width: 20px;
    margin: 0 5px 0 0;
  }

  .divider {
    padding: 0 1rem;
  }

  .about-image {
    float: right;
    margin: -3em -7em 2em 2em;
    max-width: 300px;
  }

  .about-image img {
    border-radius: 8px;
    margin-bottom: 1.5em;
  }

  @media (max-width: 1020px) {
    .about-image {
      float: none;
      margin: 0 auto 2em;
    }
  }
</style>
